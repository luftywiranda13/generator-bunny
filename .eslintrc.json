{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "import",
    "jest",
    "jsx-a11y",
    "react"
  ],
  "rules": {
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "never"
      }],
    "max-len": ["error", 80],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}
