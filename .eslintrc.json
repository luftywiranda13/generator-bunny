{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "jest"
  ],
  "rules": {
    "max-len": ["error", 80],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}
