{
  "name": "<%= moduleName %>",
  "version": "0.0.0-development",
  "description": "<%= description %>",
  "license": "MIT",
  "author": "<%= name %> <<%= email %>>",<% if (global) { %>
  "preferGlobal": true,<% } %>
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<%= githubUsername %>/<%= moduleName %>.git"
  },
  "homepage": "https://github.com/<%= githubUsername %>/<%= moduleName %>#readme",
  "bugs": "https://github.com/<%= githubUsername %>/<%= moduleName %>/issues",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "engines" : {
    "node": ">=6",
    "npm": ">=4"
  },
  "scripts": {
    "start": "nps",
    "commitmsg": "opt --in commit-msg --exec \"validate-commit-msg\"",
    "precommit": "lint-staged && flow --quiet",
    "postinstall": "nps flow.typed",
    "test": "nps test"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "eslint --fix",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "keywords": [
    "üê∞"
  ],
  "dependencies": {},
  "devDependencies": {
    "all-contributors-cli": "^4.3.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-env": "^1.5.1",
    "babel-preset-flow": "^6.23.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jest": "^20.0.3",
    "flow-bin": "^0.49.1",
    "flow-typed": "^2.1.2",
    "husky": "^0.14.0",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.0",
    "nps": "^5.2.0",
    "nps-utils": "^1.1.2",
    "opt-cli": "^1.5.1",
    "prettier": "^1.5.2",
    "semantic-release": "^6.3.6",
    "validate-commit-msg": "^2.12.1"
  }
}
