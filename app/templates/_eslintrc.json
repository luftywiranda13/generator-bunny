{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "flowtype",
    "import",
    "jest",
    "jsx-a11y",
    "react"
  ],
  "rules": {
    "comma-dangle": ["error", { "functions": "never" }],
    "max-len": ["error", 80],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}
